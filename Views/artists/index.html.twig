{% extends "template.html.twig" %}

{% block title %}Artistes{% endblock %}

{% block meta %}

    <meta name="description" content="cinéma, acteurs, réalisateurs, biographie">
    <meta name="keywords" content="cinéma, acteurs, réalisateurs, biographie">

{% endblock %}

{% block body %}

	<section class="home">

		<div class="content__head">
		
			<div class="container" style="z-index:9;">

				<div class="row">

					<div class="col-12">

						<!-- section title -->
						<h2 class="section__title">
							

							{% if search %}

								<a href="{{ baseUrl }}/films/" style="color:#ffd80e">Artistes</a>
								&rarr; Search &rarr; {{ search }}

							{% else %}

								Artistes

							{% endif %}

						</h2>
						<!-- end content title -->

							<!-- content tabs nav -->
							<ul class="nav nav-tabs content__tabs" id="content__tabs" role="tablist">

								<li class="nav-item">
									{% if not metier.id or metier.id == 3 %} {% set active0 = 'active' %} {% else %} {% set active0 = '' %} {% endif %}
									<a href="{{ baseUrl }}/artists" class="nav-link {{active0}}">All</a>
								</li>

								<li class="nav-item">
									{% if metier.id == 1 %} {% set active1 = 'active' %} {% else %} {% set active1 = '' %} {% endif %}
									<a href="{{ baseUrl }}/artists/1" class="nav-link {{active1}}">Acteurs</a>
								</li>

								<li class="nav-item">
									{% if metier.id == 2 %} {% set active2 = 'active' %} {% else %} {% set active2 = '' %} {% endif %}
									<a href="{{ baseUrl }}/artists/2" class="nav-link {{active2}}">Réalisateurs</a>
								</li>

							</ul>
							<!-- end content tabs nav -->

							<!-- content mobile tabs nav -->
							<div class="content__mobile-tabs" id="content__mobile-tabs">
								<div class="content__mobile-tabs-btn dropdown-toggle" role="navigation" id="mobile-tabs" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<input type="button" value="{{ metier.nom }}">
									<span></span>
								</div>

								<div class="content__mobile-tabs-menu dropdown-menu" aria-labelledby="mobile-tabs">
									<ul class="nav nav-tabs" role="tablist">

										<li class="nav-item"><a href="{{ baseUrl }}/artists" class="nav-link {{active0}}">All</a></li>

										<li class="nav-item"><a href="{{ baseUrl }}/artists/1" class="nav-link {{active1}}">Acteurs</a></li>

										<li class="nav-item"><a href="{{ baseUrl }}/artists/2" class="nav-link {{active2}}">Réalisateurs</a></li>

									</ul>
								</div>
							</div>
							<!-- end content mobile tabs nav -->
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="container" style="z-index:0;">

			<div class="row col-md-12">

				{% for artiste in artistes %}

					<!-- card -->
					<div class="col-6 col-sm-4 col-md-3 col-xl-2">
						<div class="card">
							<div class="card__cover">
								<img src="{{baseUrl}}/assets/images/artistes/{{ artiste.photo_a }}" alt="">
								<span class="card__rate card__rate--green">{{ artiste.note_a }}</span>
								<a href="{{ baseUrl }}/artists/show/{{ artiste.id_a }}/{{ artiste.url }}" class="card__play">
									<i class="icon ion-ios-play"></i>
								</a>
								{# <span class="card__rate card__rate--green">8.4</span> #}
							</div>
							<div class="card__content">
								<h3 class="card__title"><a href="{{ baseUrl }}/artists/show/{{ artiste.id_a }}/{{ artiste.url }}">{{ artiste.prenom_a }} {{ artiste.nom_a }}</a></h3>
							</div> 
						</div>
					</div>
					<!-- end card -->

				{% endfor %}

				<!-- paginator -->
				---<div class="col-12">

					{{ paginator|raw }}

				</div>--oo-
				<!-- paginator -->

			</div>

		</div>

	</section>



{% endblock %} 