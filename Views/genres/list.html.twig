{% extends "template.html.twig" %}
{# enfant de actors #}

{% block body %}
	{#{{ dump(MoviesByGenres) }}#}


	<div class="container">

		<div
			class="row">
			<!-- Début row -->

			<div class="col-12 p-4 bg-light text-dark">

				<a href="{{ baseUrl }}">Films</a>
				→
				{{ MoviesByGenres.genre_du_film }}

			</div>

		</div>

	</div>

	<div class="container bg-light text-dark mt-1 mb-3">

		<h1>Browse Movies by {{ MoviesByGenres.genre_du_film }}
			</h1>

		<a href="{{baseUrl}}/films/add" class="float-right btn btn-sm btn-success">Ajouter un film</a>

		<div class="container d-flex flex-row">
			<div class="row col-9">




				{% for film in MoviesByGenres %}

					<div class="col-3">

						<a href="{{baseUrl}}/films/show/{{ film.id_f }}">

							<img class="img-thumbnail" src="{{baseUrl}}/assets/images/films/{{ film.poster_f }}" alt="image film"/>


						</a>


					</div>
				{% endfor %}
			</div>
			<div class="col-3">
				<p class="bg-dark text-light font-weight-bold text-center">FILTRES</p>
				<br><br>
				
						{% for genre in genres %}


							<a href="{{baseUrl}}/genres/list/{{ genre.id_g }}">

								{{ genre.genre_du_film  }}


							</a><br><br>


						{% endfor %}

					</div>
				</div>

	

	{% endblock %}
